<p>
  <b>Name:</b>
  <%=h @person.name %>
</p>
<p>
	<b>Created</b> <%=h time_ago_in_words(@person.created_at) %> ago<!-- on <%=h @person.created_at.to_date %>--><br />
	<b>Last updated</b> <%=h time_ago_in_words(@person.updated_at) %> ago
</p>

<p>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', root_path %> |
<%= link_to 'Destroy', @person, :confirm => 'Are you sure you want to delete '+@person.name+'? This cannot be undone.', :method => :delete %>
</p>

<p>
	<% if @previous_person %>
		<%= link_to '&larr; Previous person', person_path(@previous_person) %>
	<% else %>
	   <b>First record</b>
	<% end %>
	<!-- <br /> -->&nbsp;|&nbsp;
	<% if @next_person %>
	   <%= link_to 'Next person &rarr;', person_path(@next_person) %>
	<% else %>
	   <b>Last record</b>
	<% end %>
</p>

